<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.custos.Custos_e_DespesasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custos e Despesas"
            android:textColor="?attr/colorOnSurface"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutRebanhoAssociado"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Rebanho(s) envolvido(s)">

            <AutoCompleteTextView
                android:id="@+id/spinnerRebanhoAssociado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Data da Despesa -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutDataCusto"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data da despesa"
            android:layout_marginBottom="16dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_calendario">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dataCusto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="date" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Valor Total (R$) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutValorTotal"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Valor Total (R$)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etValorTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Descrição do Gasto -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutDescricao"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Descrição do Gasto">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Categoria (Spinner Moderno) -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Categoria">

            <AutoCompleteTextView
                android:id="@+id/spinnerTipoCusto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Subcategoria (Spinner Moderno) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutSubcategoriaCusto"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:hint="Subcategoria">

            <AutoCompleteTextView
                android:id="@+id/spinnerSubcategoriaCusto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>


        <!-- Botão Concluir -->
        <Button
            android:id="@+id/btnConcluir"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Concluir"
            android:textColor="#FFFFFF"
            android:backgroundTint="#8BC34A"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
