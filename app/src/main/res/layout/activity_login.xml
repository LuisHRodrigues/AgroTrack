<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo/Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AgroTrack"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"/>

        <!-- Subtítulo Login -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="24dp"/>

        <!-- Campo Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="?attr/colorSurface"
            app:boxStrokeWidth="2dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email..."
                android:textColorHint="?attr/colorOnSurface"
                android:inputType="textEmailAddress"
                android:textSize="16sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Senha -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxStrokeColor="#000000"
            app:boxStrokeWidth="2dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Senha..."
                android:textColorHint="?attr/colorOnSurface"
                android:inputType="textPassword"
                android:textSize="16sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Checkbox Manter conectado -->
<!--        <CheckBox-->
<!--            android:id="@+id/cbManterConectado"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Manter-me conectado"-->
<!--            android:textColor="?attr/colorOnSurface"-->
<!--            android:textSize="14sp"-->
<!--            android:layout_gravity="start"-->
<!--            android:layout_marginBottom="24dp"/>-->

        <!-- Botão Entrar -->
        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="#8BC34A"
            android:paddingStart="56dp"
            android:paddingEnd="56dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="32dp"/>

        <!-- Linha divisória com texto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="?attr/colorOnSurface"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrar com Google"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="?attr/colorOnSurface"/>

        </LinearLayout>

        <!-- Botão Google -->
        <ImageButton
            android:id="@+id/btnGoogle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_google"
            android:contentDescription="Login com Google"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:layout_marginBottom="40dp"/>

        <!-- Links inferiores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Esqueceu a senha?"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvEsqueceuSenha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Clique aqui!"
                    android:textColor="#2196F3"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Não tem conta?"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvCadastrese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Cadastre-se"
                    android:textColor="#2196F3"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>