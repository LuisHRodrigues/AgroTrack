<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:layout_gravity="center"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Relatório"
                android:textSize="46sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="?attr/colorOnSurface"/>

        </LinearLayout>

        <!-- Container Verde Principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/relatorio_container_background"
            android:padding="16dp">

            <!-- Botão Filtrar -->
            <Button
                android:id="@+id/btnFiltrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtrar"
                android:textColor="#000000"
                android:textStyle="bold"
                android:backgroundTint="#FFFFFF"
                android:layout_gravity="end"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupFiltros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFiltroSemanal"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semanal" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFiltroMensal"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mensal" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFiltroBimestral"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bimestral" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFiltroAnual"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anual" />
            </com.google.android.material.chip.ChipGroup>
            <!-- Grid de Cards com Valores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_branco_background"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lucro / Prejuízo Total:"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvLucroPrejuizo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ x.xxx,xx"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </LinearLayout>

                <!-- Linha 1: Receitas e Despesas Totais -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Card Receitas Totais -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_branco_background"
                        android:padding="12dp"
                        android:gravity="center"
                        android:layout_marginEnd="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Receitas Totais:"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvReceitaTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ x.xxx,xx"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                    </LinearLayout>

                    <!-- Card Despesas Totais -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_branco_background"
                        android:padding="12dp"
                        android:gravity="center"
                        android:layout_marginStart="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Despesas Totais:"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvCustoTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ x.xxx,xx"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Linha 2: Total de Animais e Vendidos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Card Total de Animais -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_branco_background"
                        android:padding="12dp"
                        android:gravity="center"
                        android:layout_marginEnd="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total de Animais:"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvTotalAnimais"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="xxxx"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                    </LinearLayout>

                    <!-- Card Total Vendidos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_branco_background"
                        android:padding="12dp"
                        android:gravity="center"
                        android:layout_marginStart="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total de vendidos:"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvTotalVendidos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="xxxx"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Linha 3: Despesas com Vacinas e Ração -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!-- Card Despesas com Vacinas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_branco_background"
                        android:padding="12dp"
                        android:gravity="center"
                        android:layout_marginEnd="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Despesas com Vacinas:"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvDespesasVacinas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ x.xxx,xx"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                    </LinearLayout>

                    <!-- Card Despesas com Ração -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_branco_background"
                        android:padding="12dp"
                        android:gravity="center"
                        android:layout_marginStart="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Despesas com Ração:"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvDespesasRacao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ x.xxx,xx"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:baselineAligned="false">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_branco_background"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Compra de Animais"
                                android:textColor="#000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvDespesasCompraAnimais"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="R$ 0,00"
                                android:textColor="#F44336"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <!-- Título Gráfico de Barras -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lucros e Despesas"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

            <!-- Legenda -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#4CAF50"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lucros"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginEnd="16dp"/>

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#F44336"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Despesas"
                    android:textSize="15sp"
                    android:textColor="#000000"/>

            </LinearLayout>

            <!-- Gráfico de Barras -->
            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="24dp"/>

            <!-- Título Gráfico de Pizza - Rebanho -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rebanho"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"/>

            <!-- Gráfico de Pizza - Rebanho -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartRebanho"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="24dp"/>

            <!-- Título Gráfico de Pizza - Distribuição de Gado -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distribuição de Gado por Rebanho"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"/>

            <!-- Gráfico de Pizza - Distribuição -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartDistribuicao"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

            <!--Despesas por categoria-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Despesas por Categoria"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Gráfico de Barras SEM legendas no eixo X -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChartDespesasCategoria"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"/>

            <!-- Contêiner para a Legenda Customizada -->
            <LinearLayout
                android:id="@+id/legendContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"/>

        </LinearLayout>

    </LinearLayout>



</ScrollView>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" /> <!-- Começa invisível -->

</FrameLayout>